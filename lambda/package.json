{
  "name": "order-validator-lambda",
  "version": "1.0.0",
  "description": "Lambda function to validate orders with OpenTelemetry tracing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run package",
    "package": "cd dist && zip -r ../lambda.zip .",
    "clean": "rm -rf dist lambda.zip"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/auto-instrumentations-node": "^0.40.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.1",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@opentelemetry/instrumentation-aws-lambda": "^0.37.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
