    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.6",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.3.3",
    "winston": "^3.19.0"
  },
  "keywords": [
    "observability",
    "opentelemetry",
    "microservices",
    "tracing",
    "jaeger"
  ],
  "author": "",
